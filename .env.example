# Example environment variables
# Copy this to .env.local and modify for your setup

# API Configuration
VITE_APP_API_URL=http://localhost:4567

# App Configuration  
VITE_APP_NAME=Rixa
VITE_APP_VERSION=0.1.0

# Feature Flags
VITE_APP_ENABLE_MOCK_API=true
VITE_APP_ENABLE_DEBUG=true

# Social Media Features
VITE_APP_MAX_POST_LENGTH=280
VITE_APP_MAX_COMMENT_LENGTH=200
VITE_APP_ENABLE_DEBATES=true

# Development Settings
VITE_APP_MOCK_DELAY=500